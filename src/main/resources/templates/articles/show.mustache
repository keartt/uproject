    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>

    {{#article}}  <!-- 모델에 등록된 데이터 가져오는 타입 -->
